<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="154dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="1dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/truckImage"
                android:layout_width="81dp"
                android:layout_height="91dp"
                android:layout_marginStart="16dp"

                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/truck" />

            <TextView
                android:id="@+id/TruckCategory2"
                android:layout_width="212dp"
                android:layout_height="21dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="74dp"
                android:gravity="center"
                android:text="Category"
                android:textColor="#2979FF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TruckRegisterNo2"
                android:layout_width="146dp"
                android:layout_height="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:gravity="start|center"
                android:paddingLeft="5dp"
                android:text="vehicle No"
                android:textColor="#4C5463"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TruckTonnage2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:gravity="start|center"
                android:paddingLeft="5dp"
                android:text="Tonnage"
                android:textColor="#4C5463"
                app:layout_constraintEnd_toEndOf="@+id/TruckRegisterNo2"
                app:layout_constraintStart_toStartOf="@+id/TruckRegisterNo2"
                app:layout_constraintTop_toBottomOf="@+id/TruckRegisterNo2" />

            <TextView
                android:id="@+id/Truck2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:gravity="start|center"
                android:paddingLeft="5dp"
                android:text="Truck"
                android:textColor="#4C5463"
                app:layout_constraintEnd_toEndOf="@+id/TruckTonnage2"
                app:layout_constraintStart_toStartOf="@+id/TruckTonnage2"
                app:layout_constraintTop_toBottomOf="@+id/TruckTonnage2" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Reg Number:"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/TruckRegisterNo2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Tonnage:"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Vehicle:"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView26"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>