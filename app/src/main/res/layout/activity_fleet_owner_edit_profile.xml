<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FleetOwnerEditProfile">

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3D5AFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editFleetName"
        android:layout_width="322dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/input_black_bg"
        android:ems="10"
        android:hint="Fleet name"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTruckOwned"
        android:layout_width="322dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_black_bg"
        android:ems="10"
        android:hint="Truck Owned"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editFleetName"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/editFleetName"
        app:layout_constraintTop_toBottomOf="@+id/editFleetName" />

    <EditText
        android:id="@+id/editDriverCount"
        android:layout_width="322dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_black_bg"
        android:ems="10"
        android:hint="Driver Count"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editTruckOwned"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTruckOwned"
        app:layout_constraintTop_toBottomOf="@+id/editTruckOwned" />

    <EditText
        android:id="@+id/editFleetLicenceNo"
        android:layout_width="322dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_black_bg"
        android:ems="10"
        android:hint="Licence No"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editDriverCount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editDriverCount"
        app:layout_constraintTop_toBottomOf="@+id/editDriverCount" />



    <EditText
        android:id="@+id/editFleetAddress"
        android:layout_width="326dp"
        android:layout_height="87dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_black_bg"
        android:ems="10"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editFleetLicenceNo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editFleetLicenceNo"
        app:layout_constraintTop_toBottomOf="@+id/editFleetLicenceNo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Alter and Update Profile"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout4"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/frameLayout4"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

    <Button
        android:id="@+id/btnSaveFleetProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/all_button"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/editFleetAddress"
        app:layout_constraintStart_toStartOf="@+id/editFleetAddress"
        app:layout_constraintTop_toBottomOf="@+id/editFleetAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>