<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/LoadTonnage2"
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:layout_marginStart="1dp"
                android:hint="Tonnage"
                android:paddingLeft="5dp"
                android:textColor="#4C5463"
                app:layout_constraintStart_toEndOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/LoadCategory2" />

            <TextView
                android:id="@+id/LoadCategory2"
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:gravity="center|start"
                android:hint="Category"
                android:paddingLeft="5dp"
                android:textColor="#4C5463"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/LoadDestination2" />

            <TextView
                android:id="@+id/LoadSource2"
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:gravity="start|center"
                android:hint="Source"
                android:paddingLeft="5dp"
                android:textColor="#4C5463"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/LoadDestination2"
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start|center"
                android:hint="Destination"
                android:paddingLeft="5dp"
                android:textColor="#4C5463"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/LoadRent2"
                android:layout_width="115dp"
                android:layout_height="22dp"
                android:gravity="center|start"
                android:hint="Cost"
                android:paddingLeft="1dp"
                android:textColor="#2979FF"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/textView27"
                app:layout_constraintTop_toTopOf="@+id/textView27" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="84dp"
                android:layout_height="88dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.692"
                app:srcCompat="@drawable/steel" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:text="From:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="2dp"
                android:text="To:"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/LoadSource2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="34dp"
                android:gravity="start|center"
                android:text="Category:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="61dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:paddingLeft="2dp"
                android:text="Tonnage:"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="â‚¹."
                android:textColor="#2979FF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView30"
                app:layout_constraintTop_toBottomOf="@+id/LoadTonnage2" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:text="Rental Cost:"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <Button
                android:id="@+id/btnBid"
                android:layout_width="79dp"
                android:layout_height="24dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/all_button"
                android:text="Bid Rent"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoadRent2" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>