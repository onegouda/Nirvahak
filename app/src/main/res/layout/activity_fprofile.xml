<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fProfile">

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="#3D5AFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/fleetOwnerNameP"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="155dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/fleetOwnerProfilePic"
            android:layout_width="228dp"
            android:layout_height="149dp"
            android:layout_marginStart="80dp"

            tools:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/fleetOwnerEditProfile"
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_edit_24"

            android:text=" "
            android:textColor="@color/white"
            android:textSize="16dp" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="362dp"
        android:layout_height="346dp"
        android:layout_marginTop="44dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="116dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Fleet Name : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fleetName"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:text="Truck owned : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/truckOwned"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="70dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="120dp"
            android:text="Driver Count : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/driverCount"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="120dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/textView23"
            android:layout_width="116dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="170dp"
            android:text="Licence No : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fleetLicenceNo"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="170dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="220dp"
            android:text="Fleet Address : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fleetAddress"
            android:layout_width="200dp"
            android:layout_height="96dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="220dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your EMAIL is not verified,Verify Here"
        app:layout_constraintEnd_toEndOf="@+id/cardView1"
        app:layout_constraintStart_toStartOf="@+id/cardView1"
        app:layout_constraintTop_toBottomOf="@+id/cardView1" />

    <Button
        android:id="@+id/btnVerifyFprofile"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:text="Verify"
        android:background="@drawable/all_button"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>