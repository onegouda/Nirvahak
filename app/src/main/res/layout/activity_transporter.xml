<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transporter"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout2"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewHome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/side_menu_bar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D5AFE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="675dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar" >

            <TextView
                android:layout_width="341dp"
                android:layout_height="84dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="Choose to Navigate"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:layout_width="345dp"
                android:layout_height="95dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/driverhomenav">


                <TextView
                    android:id="@+id/truckMarket"
                    android:layout_width="235dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Truck Market"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="115dp"
                    android:layout_height="95dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    app:srcCompat="@drawable/truck" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="345dp"
                android:layout_height="95dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/driverhomenav1">

                <TextView
                    android:id="@+id/tHistory"
                    android:layout_width="235dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Check Distance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="86dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/map" />




            </FrameLayout>

            <FrameLayout
                android:layout_width="345dp"
                android:layout_height="95dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="340dp"
                android:background="@drawable/driverhomenav">


                <TextView
                    android:id="@+id/tMyLoads"
                    android:layout_width="235dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:text="My Loads"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="101dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/loads" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="345dp"
                android:layout_height="95dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="460dp"
                android:background="@drawable/driverhomenav1">

                <TextView
                    android:id="@+id/tProfile"
                    android:layout_width="235dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="88dp"
                    android:layout_height="79dp"
                    android:layout_marginStart="250dp"
                    app:srcCompat="@drawable/profile"
                    android:layout_marginTop="5dp"/>




            </FrameLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="560dp"
                android:text="Click On text" />

            <Button
                android:id="@+id/btnLogoutT"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="590dp"
                android:background="@drawable/all_button"
                android:text="LOGOUT"
                android:textColor="@color/white" />


        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.drawerlayout.widget.DrawerLayout>